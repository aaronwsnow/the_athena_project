<UserControl x:Class="PluginSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MatrixBasic"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Border Name="Border_Main" BorderBrush="White" BorderThickness="3" CornerRadius="3">
        <ScrollViewer x:Name="Plugin_Window" Margin="3" Background="Transparent" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" >
             <Grid Name="List_Grid" Margin="0" />
         </ScrollViewer>
    </Border>

</UserControl>
