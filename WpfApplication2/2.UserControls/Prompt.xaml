<UserControl Name="Prompt_Window"  x:Class="PromptX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_Athena_Project"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    <Grid Name="Main_Grid" Background="Transparent">
        <Border Name="RTBBorder" BorderBrush="white" BorderThickness="4,0,4,0"  >
            <RichTextBox  x:Name="PromptBox" Background="Transparent" IsReadOnly="True" BorderThickness="0" />
        </Border>
        
        <Border x:Name="top_button" Height="50" VerticalAlignment="Top" BorderBrush="white" BorderThickness="4" Background="Transparent"/>
        <Border x:Name="bottom_button" Height="50" VerticalAlignment="Bottom" BorderBrush="white" BorderThickness="4" Background="Transparent"/>

    </Grid>
</UserControl>
